
    <div class="modal fade" id="profileModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header text-center">
                    <h4 class="modal-title w-100 font-weight-bold">Your Profile<i class="bi bi-person-fill"></i></h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body mx-3">
                    <div class="md-form mb-3">
                        <label for="name">Name</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1"><i
                                    class="bi bi-pencil-square"></i></span>
                            <input type="text" id="name" name="name" class="form-control"
                                   aria-label="postTitle" value="<%=user.name%>"
                                aria-describedby="basic-addon1" readonly>
                        </div>
                    </div>
                    <div class="md-form mb-2">
                        <label for="email">Email</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-envelope-fill"></i></span>
                            <input type="text" id="email" name="email" class="form-control"
                            aria-label="postTitle" value="<%=user.email%>"
                            aria-describedby="basic-addon1" readonly>
                        </div>
                    </div>
                    <div class="md-form mb-2">
                        <label for="posts">Total Post(s) </label>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-award"></i></span>
                            <input type="text" id="posts" name="email" class="form-control"
                            aria-label="postTitle" value="<%=user.post_count%>"
                            aria-describedby="basic-addon1" readonly>
                        </div>
                    </div>
                    <div class="md-form mb-2">
                        <label for="yearOfStudy">Year Of Study</label>
                        <div class="input-group mb-3">
                            <span class="input-group-text" id="basic-addon1"><i class="bi bi-award"></i></span>
                            <input type="text" id="posts" name="yearOfStudy" class="form-control"
                            aria-label="postTitle" value="<%=user.yearOfStudy%>"
                            aria-describedby="basic-addon1" readonly>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>